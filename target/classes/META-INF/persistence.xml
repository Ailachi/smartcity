<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>database.User</class>
        <class>database.Place</class>
        <class>database.Specialty</class>
        <class>database.Subject</class>
        <class>database.TouristSight</class>
        <class>database.University</class>
        <class>database.Vacancy</class>
        <class>database.BusinessNews</class>
        <class>database.Role</class>

        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/SmartCity"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="gamma"/>


            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
            <property name="hibernate.format_sql" value="true" />


<!--            <property name="javax.persistence.schema-generation.database.action"-->
<!--                      value="create"/>-->
        </properties>

    </persistence-unit>
</persistence>